{
  "name": "nexteuropa-theme-framework",
  "version": "0.4.5",
  "description": "Next EUROPA Theme Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/ec-europa/ne-theme-framework-dev.git"
  },
  "homepage": "https://github.com/ec-europa/ne-theme-framework-dev",
  "private": true,
  "license": "EUPL-1.1",
  "scripts": {
    "start": "npm run dev",
    "postinstall": "bower install",
    "eslint": "eslint src/framework/ scripts/; exit 0",
    "stylelint": "stylelint src/**/*.scss --syntax scss; exit 0",
    "lint": "npm run eslint  && npm run stylelint",
    "bower": "bower",
    "dev": "node ./scripts/build.js --server --watch",
    "dist": "node ./scripts/build.js -- -c && node ./scripts/dist.js",
    "gh-pages": "node ./scripts/build.js -- -c && node ./scripts/gh-pages.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "devDependencies": {
    "async": "^1.5.2",
    "autoprefixer": "^6.3.5",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "bower": "^1.7.7",
    "browser-sync": "^2.11.2",
    "chokidar": "^1.4.3",
    "commander": "^2.9.0",
    "conventional-changelog-cli": "^1.1.1",
    "cssnano": "^3.5.2",
    "del": "^2.2.0",
    "eslint": "^2.5.3",
    "eslint-config-airbnb": "^6.2.0",
    "front-matter": "^2.0.6",
    "gh-pages": "^0.11.0",
    "ghooks": "^1.1.1",
    "gitbook": "^2.6.7",
    "gitbook-plugin-anchors": "^0.5.0",
    "gitbook-plugin-prism": "^1.0.0",
    "gitbook-plugin-styleguide": "^0.7.0",
    "glob": "^7.0.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cache": "0.4.3",
    "gulp-change": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-newer": "^1.1.0",
    "gulp-postcss": "^6.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "node-sass-import-once": "^1.2.0",
    "nunjucks": "^2.4.1",
    "nunjucks-autoescape": "^1.0.1",
    "postcss-sprites": "^3.1.1",
    "postcss-svgo": "^2.1.2",
    "postcss-url": "^5.1.1",
    "rollup": "^0.25.7",
    "rollup-plugin-babel": "^2.4.0",
    "stylelint": "^5.2.1",
    "stylelint-config-standard": "^4.0.1",
    "validate-commit-msg": "^2.5.0"
  },
  "engines": {
    "node": ">=5.0",
    "npm": "~3.3.6"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
