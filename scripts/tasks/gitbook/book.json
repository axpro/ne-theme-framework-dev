{
  "title": "Next EUROPA Frontend Documentation",
  "description": "Common documentation for all frontend related development",
  "language": "en",
  "plugins": [
    "prism",
    "-highlight",
    "-sharing",
    "styleguide",
    "anchors"
  ],
  "pluginsConfig": {
    "styleguide": {
      "base": "src",
      "frame": "./tpl/frame.html",
      "sizes": [
        {
          "title": "Desktop",
          "width": "1200px"
        }, {
          "title": "Tablet",
          "width": "800px"
        }, {
          "title": "Phone",
          "width": "380px"
        }
      ]
    }
  },
  "links": {
    "sidebar" : {
      "Next EUROPA": "http://beta.ec.europa.eu/"
    }
  },
  "styles": {
    "website": "site.css"
  }
}
